class Person {
	init(name, age, gender) {
		self.name = name;
		self.age = age;
		self.gender = gender;
	}

	sayName() {
		print "hallo mein name ist " + self.name;
	}
	sayAge() {
		print self.age;
	}
	sayGender() {
		print "Ich bin ein/e " + self.gender;
	}
	bday() {
		self.age = self.age + 1;
		self.sayAge();
	}
}

